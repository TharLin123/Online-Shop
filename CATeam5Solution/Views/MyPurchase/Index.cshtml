
@{
    List<MyPurchaseViewModel> myPurchaseViewModels = (List<MyPurchaseViewModel>)ViewData["myPurchaseViewModel"];
}

<head>
    <link href="~/css/MyPurchase.css" rel="stylesheet" />
</head>

    @if (myPurchaseViewModels == null)
    {
        <div>Your history is empty.</div>
    }
    else
    {
        <body>
            <div class="container">
                <header class="header"> </header>

                <div class="gallery">
                    @foreach (var customer in myPurchaseViewModels)
                    {
                    <div class="producthistory">
                        <a><img src=/img/@customer.ImageLink alt="" width="200" class="cards" /></a>
                        <p></p>
                        <p>@customer.Name</p>
                        <div class="Desc">
                            <p>@customer.Description</p>
                        </div>
                        <br/>
                        <button class="Download">Download</button>
                        <button class="Detail" title="Quantity: @customer.Quantity&#10;Order Date: @customer.DateTime">Detail</button>
                        <br />
                        <select class="select">
                            <option value="Activation Code">Activation Code</option>
                            @for(int i = 0; i < customer.ActivationCode.Count; i++){<option value="Actcode">@customer.ActivationCode[i]</option>}
                        
                        </select>
                        <p></p>
                        <form id="score_form">
                            <div class="star-rating">
                                <fieldset class="starability-basic">
                                    <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                                    <input type="radio" id="first-rate1" name="rating" value="1" />
                                    <label for="first-rate1" title="Terrible">1 star</label>
                                    <input type="radio" id="first-rate2" name="rating" value="2" />
                                    <label for="first-rate2" title="Not good">2 stars</label>
                                    <input type="radio" id="first-rate3" name="rating" value="3" />
                                    <label for="first-rate3" title="Average">3 stars</label>
                                    <input type="radio" id="first-rate4" name="rating" value="4" />
                                    <label for="first-rate4" title="Very good">4 stars</label>
                                    <input type="radio" id="first-rate5" name="rating" value="5" />
                                    <label for="first-rate5" title="Amazing">5 stars</label>
                                </fieldset>
                            </div>
                        </form>
                        <textarea class="Review"onClick="this.value='';">Leave a review</textarea>
                    </div>
                    }
                </div>

            </div>
        </body>
        <div class="copyright">&copy;2020 - <strong>GRID</strong></div>



    }


    <style>
        body {
            font-family: Cambria, "Hoefler Text", "Liberation Serif", Times, "Times New Roman", serif;
            background-color: #FFFFFF;
            margin: 0;
        }
        /* Container */
        .container {
            width: 90%;
            margin-left: auto;
            margin-right: auto;
        }
        /* Header */
        header {
            width: 100%;
            height: 8%;
            background-color: #5D5E5D;
            border-bottom: 1px solid #353635;
        }
        .select
        {
            margin-top:20px;
            width:80px;
        }

        .Download {
            min-width: 80px;
            margin-right: 15px;
        }

        .Detail {
            min-width: 80px;
        }

        .Review {
            width: 200px;
            height: 70px;
            position: center;
            overflow-y: auto;
            overflow-x: auto;
            resize: none;
        }

        .Desc {
            width: 200px;
            height: 170px;
            padding-left: 20px;
        }

        .star-rating {
            padding-left: 35px;
        }

        .text_column {
            width: 90%;
            text-align: left;
            font-weight: lighter;
            line-height: 25px;
            float: left;
            padding-left: 20px;
            padding-right: 20px;
            color: #A3A3A3;
        }

        .gallery {
            clear: both;
            display: inline-block;
            width: 100%;
            background-color: #FFFFFF;
            margin-top: 20px;
            padding-bottom: 35px;
            padding-top: 0px;
            margin-top: 25px;
            margin-bottom: 0px;
        }

        .producthistory {
            width: 220px;
            height: 700px;
            text-align: center;
            float: left;
            margin-top: 35px;
            background-color: #F8F8F8;
            padding-bottom: 20px;
            margin-left: 1%;
            margin-right: 1%;
            border-radius: 3px;
            padding-top: 20px;
            border-bottom: 4px solid #6DC7D0;
        }

        .gallery .thumbnail h4 {
            margin-top: 5px;
            margin-bottom: 5px;
            color: #52BAD5;
            text-align: left;
            padding-left: 20px;
            padding-right: 20px;
        }

        .gallery .thumbnail p {
            margin: 0;
            color: #B3B3B3;
            text-align: left;
            padding-left: 20px;
        }

        .cards {
            width: 40%;
            height: auto;
            max-width: 400px;
            max-height: 200px;
            opacity: 0.8;
        }

    .copyright {
        text-align: center;
        background-color: #717070;
        color: #FFFFFF;
        text-transform: uppercase;
        font-weight: lighter;
        letter-spacing: 2px;
        border-top-width: 2px;
        margin-top: 20px;
    }
</style>

