@section Scripts {
    <script src="~/js/Account.js"></script>
}
<h1 > Create Account</h1>
<div>
    <form action="/Login/RegisterAccount" method="POST">
            <div class="my_tbl" style="text-align:center">
                <div class="my_row">
                    <div class="my_cell">
                        <b>Username:</b>
                    </div>
                    <div class="my_cell">
                        <input name="userName" id="userName" required />
                    </div>
                    <div class="my_cell">
                        <b>E-Mail:</b>
                    </div>
                    <div class="my_cell">
                        <input name="email" id="email"type="email" required />
                    </div>
                    <div class="my_row">
                        <div class="my_cell">
                            <b>Password:</b>
                        </div>
                        <div>
                            <input name="password" id="password" type="password"required />
                        </div>
                        <div class="my_cell">
                            <b>Confirm Password:</b>
                        </div>
                        <div>
                            <input name="confirmPass" id="confirmPass" type="password" style="margin-left:135px" required />
                            <input type="button" id="btnCheck" value="Check Password" title="Check Passwor" onclick="checkpass()" />
                        </div>
                    </div>
                    <div class="my_row">
                        <div class="my_cell"></div>
                        <div class="my_cell" style="text-align: center">
                            <br />
                            <input type="submit" id="submitCreate" value="Submit" class="btn btn-primary" title="Please Check Password" disabled />
                            <input type="reset" value="Reset" class="btn btn-primary" title="Reset Form" />
                        </div>
                    </div>
                </div>
        </div>
    </form>
</div>
